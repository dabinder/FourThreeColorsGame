				<Border Grid.Row="3" Grid.Column="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="{StaticResource BorderThickness}" Width="{StaticResource SpaceSize}" Height="{StaticResource SpaceSize}" />
