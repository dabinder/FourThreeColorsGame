				<Border Grid.Row="0" Grid.Column="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="{StaticResource BorderThickness}" Width="{StaticResource SpaceSize}" Height="{StaticResource SpaceSize}" />

				<!-- row 1 -->
