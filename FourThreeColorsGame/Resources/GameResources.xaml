<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:conv="using:FourThreeColorsGame.Converters"
	xmlns:fw="using:FourThreeColorsGame.Framework"
>

	<!-- default colors -->
	<SolidColorBrush x:Key="DefaultHoverBorder" Color="SkyBlue" />

	<!-- piece colors -->
	<conv:ColorTypeToColorConverter x:Key="ColorTypeToColorConverter" />
	<SolidColorBrush x:Key="Color1">
		<SolidColorBrush.Color>
			<Binding Converter="{StaticResource ColorTypeToColorConverter}">
				<Binding.ConverterParameter>
					<fw:ColorType>Color1</fw:ColorType>
				</Binding.ConverterParameter>
			</Binding>
		</SolidColorBrush.Color>
	</SolidColorBrush>
	<SolidColorBrush x:Key="Color2">
		<SolidColorBrush.Color>
			<Binding Converter="{StaticResource ColorTypeToColorConverter}">
				<Binding.ConverterParameter>
					<fw:ColorType>Color2</fw:ColorType>
				</Binding.ConverterParameter>
			</Binding>
		</SolidColorBrush.Color>
	</SolidColorBrush>
	<SolidColorBrush x:Key="Color3">
		<SolidColorBrush.Color>
			<Binding Converter="{StaticResource ColorTypeToColorConverter}">
				<Binding.ConverterParameter>
					<fw:ColorType>Color3</fw:ColorType>
				</Binding.ConverterParameter>
			</Binding>
		</SolidColorBrush.Color>
	</SolidColorBrush>

</ResourceDictionary>
